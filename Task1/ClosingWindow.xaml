<Window x:Class="Task1.ClosingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Подтверждение" Height="200" Width="300" >
    <StackPanel>
        <Label Content="Вы хотите закрыть окно?" />
        <Button Content="Да" x:Name="yesButton" Click="YesButton_Click" IsDefault="True"/>
        <Button Content="Нет" x:Name="noButton" IsCancel="True"/>
        <Image Source="/Questin.png" Stretch="Fill" Height="118"/>
        
    </StackPanel>
</Window>
